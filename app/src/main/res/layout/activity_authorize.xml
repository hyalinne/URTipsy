<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hyalinne.urtipsy.AuthorizeActivity">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="01000000000"
        android:layout_marginStart="73dp"
        android:layout_marginTop="32dp"
        android:id="@+id/guardianPhone"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증요청"
        android:layout_marginStart="20dp"
        android:id="@+id/sendGuardianBtn"
        android:layout_alignTop="@+id/guardianPhone"
        android:layout_toEndOf="@+id/guardianPhone" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="000000"
        android:id="@+id/authorizationNum"
        android:layout_below="@+id/sendGuardianBtn"
        android:layout_alignStart="@+id/guardianPhone"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:id="@+id/authorizationBtn"
        android:layout_alignTop="@+id/authorizationNum"
        android:layout_alignStart="@+id/sendGuardianBtn" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인증되었습니다."
        android:textSize="20dp"
        android:id="@+id/checkAuthorizationText"
        android:textAlignment="center"
        android:layout_marginBottom="186dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
